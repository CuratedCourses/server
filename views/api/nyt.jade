extends ../layouts/layout

block head
  title #{application} &middot; New York Times

block content
  .container
    .page-header
      h2
        i.fa.fa-building-o
        | &nbsp;New York Times API

    .btn-group.btn-group-justified.hidden-xs
      a.btn.btn-primary(href='http://developer.nytimes.com/page', rel='external')
        i.fa.fa-check-square-o
        | &nbsp;Overview
      a.btn.btn-primary(href='http://prototype.nytimes.com/gst/apitool/index.html', rel='external')
        i.fa.fa-laptop
        | &nbsp;API Console
      a.btn.btn-primary(href='http://developer.nytimes.com/docs', rel='external')
        i.fa.fa-code-fork
        | &nbsp;API Endspoints

    h4 Young Adult Best Sellers
    table.table.table-striped.table-bordered
      thead
        tr
          th Rank
          th Title
          th.hidden-xs Description
          th Author
          th.hidden-xs ISBN-13
      tbody
        for book in books
          tr
            td= book.rank
            td= book.book_details[0].title
            td.hidden-xs= book.book_details[0].description
            td= book.book_details[0].author
            td.hidden-xs= book.book_details[0].primary_isbn13
