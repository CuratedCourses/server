extends ../layouts/layout

block head
  title #{application} &middot; Verify Code

block content
  .container
    .row
      .col-sm-8.col-sm-offset-2
        br
        br
        form(action="/verify-code", method='POST')
          input.form-control(type='hidden', name='_csrf', value=_csrf)
          legend Please enter your enhanced security code
          p Check your app or text message for a six-digit code and enter it below:
          .form-group
            label.sr-only(for='code') Code:
            input.form-control(type='text', name='code', placeholder='code', autocomplete='off', autofocus=true, required)
          .form-group
            button.btn.btn-primary(type='submit')
              i.fa.fa-unlock-alt
              | &nbsp;Login
