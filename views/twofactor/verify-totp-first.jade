extends ../layouts/layout

block head
  title #{application} &middot; Verify Code

block content
  .container
    .row
      .col-sm-8.col-sm-offset-2
        br
        br
        form(action="/verify-totp-first", method='POST')
          input.form-control(type='hidden', name='_csrf', value=_csrf)
          legend Test your enhanced security code
          p Check your app for a six-digit code and enter it below to complete your setup:
          .form-group
            label.sr-only(for='code') Code:
            input.form-control(type='text', name='code', placeholder='code', autocomplete='off', autofocus=true, required)
          .form-group
            button.btn.btn-success(type='submit')
              i.fa.fa-check
              | &nbsp;Continue
            | &nbsp;
            a.btn.btn-danger(href='/disable-enhanced-security')
              i.fa.fa-times
              | &nbsp;Cancel Enhanced Security
