extends ../layouts/layout

block head
  title #{tagName}

block styles

block content
  .mini-tron
    .container
      h1 #{tag.description}
      p
        | #{tag._id}
  .container
    if false
      p There are no related resources.
      // BADBAD: this should actually be /tag/#{tag._id}/assets/new or something similar?
      p Please help by <a href="/assets/new">adding a related resource</a> to our catalog.
    else
      for asset in assets
        hr.separator
        .row
          include ../partials/asset
